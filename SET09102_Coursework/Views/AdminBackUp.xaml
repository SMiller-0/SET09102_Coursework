<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
            x:Class="SET09102_Coursework.Views.AdminBackUp"
            xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:viewModels="clr-namespace:SET09102_Coursework.ViewModels"
            Title="Administrator Data Back-Up">

    <Grid>
        <Label 
        Text="{Binding currentTable}"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        FontSize="20"
        TextColor="{StaticResource Primary}"/>

        <Label 
        Text="{Binding dbLocation}"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        FontSize="16"
        TextColor="{StaticResource Secondary}"/>

        <CollectionView x:Name="tableData"
                ItemsSource="{Binding currentTableData}"
                Margin="10"
                SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding ColumnName}" FontSize="14" TextColor="{StaticResource Primary}"/>
                        <Label Text="{Binding ColumnID}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column1}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column2}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column3}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column4}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column5}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column6}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column7}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding Column8}" FontSize="14" TextColor="{StaticResource Secondary}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid>
            <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            Command="{Binding PreviousTable}"
            IsEnabled="{Binding IsNotFirst}"
            Style="{StaticResource ButtonSecondary}"
            Text="Previous" />
            <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Command="{Binding NextTable}"
            IsEnabled="{Binding IsNotLast}"
            Style="{StaticResource ButtonSecondary}"
            Text="Next" />
        </Grid>

        <Grid>
            <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="15"
            Command="{Binding CreateCSV}"
            Style="{StaticResource ButtonPrimary}"
            Text="Print CSV"/>
            <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="15"
            Command="{Binding CopyDatabase}"
            Style="{StaticResource ButtonPrimary}"
            Text="Copy Database"/>
            <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="15"
            Command="{Binding ReturnToHome}"
            Style="{StaticResource ButtonPrimary}"
            Text="Back"/>
        </Grid>
    </Grid>
</ContentPage>