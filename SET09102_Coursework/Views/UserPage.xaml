<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SET09102_Coursework.ViewModels"
             xmlns:converters="clr-namespace:SET09102_Coursework.Converters"
             x:Class="SET09102_Coursework.Views.UserPage"
             Title="User Details">

<ContentPage.Resources>
    <ResourceDictionary>
        <converters:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
    </ResourceDictionary>
</ContentPage.Resources>

 <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="{Binding FullName}"
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <!-- Divider -->
            <BoxView HeightRequest="1" BackgroundColor="Gray" />

            <!-- Personal Information -->
            <VerticalStackLayout Spacing="5">
              <!-- <Label Text="Details" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       Margin="0,10,0,0" /> -->

                <Label Text="First Name" FontAttributes="Bold"/>
                <Label Text="{Binding User.FirstName}" />

                <ContentView IsVisible="{Binding User.MiddleName, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Middle Name" FontAttributes="Bold" Margin="0,10,0,0"/>
                        <Label Text="{Binding User.MiddleName}" />
                    </VerticalStackLayout>
                </ContentView>

                <Label Text="Surname" FontAttributes="Bold" Margin="0,10,0,0"/>
                <Label Text="{Binding User.Surname}" />

                <Label Text="Email" FontAttributes="Bold" Margin="0,10,0,0"/>
                <Label Text="{Binding User.Email}" />
                
                <Label Text="Role" FontAttributes="Bold" Margin="0,10,0,0"/>
                <Label Text="{Binding RoleName}" />
            </VerticalStackLayout>

            <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,10"/>

            <!-- Address Information -->
            <Label Text="Address" 
                    FontSize="22" 
                    FontAttributes="Bold" 
                    Margin="0,10,0,0" />

            <VerticalStackLayout Spacing="5">
                <Label Text="Street" FontAttributes="Bold"/>
                <Label Text="{Binding User.Street}" />

                <Label Text="City" FontAttributes="Bold" Margin="0,10,0,0"/>
                <Label Text="{Binding User.City}" />

                <Label Text="Postcode" FontAttributes="Bold" Margin="0,10,0,0"/>
                <Label Text="{Binding User.Postcode}" />
            </VerticalStackLayout>

            <!-- Divider -->
            <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,20"/>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Edit User" Command="{Binding EditUserCommand}" />
                <Button Text="Delete User" Command="{Binding DeleteUserCommand}" BackgroundColor="IndianRed" TextColor="White"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
