<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SET09102_Coursework.ViewModels"
             x:Class="SET09102_Coursework.Views.UserPage"
             Title="User Details">

    <VerticalStackLayout Padding="20" Spacing="20">
        <!-- First Name -->
        <VerticalStackLayout Spacing="2">
            <Label Text="First Name" FontAttributes="Bold" FontSize="20"/>
            <Label Text="{Binding SelectedUser.FirstName}" FontSize="18" />
        </VerticalStackLayout>

        <!-- Surname -->
        <VerticalStackLayout Spacing="2">
            <Label Text="Surname" FontAttributes="Bold" FontSize="20"/>
            <Label Text="{Binding SelectedUser.Surname}" FontSize="18" />
        </VerticalStackLayout>

        <!-- Role -->
        <VerticalStackLayout Spacing="2">
            <Label Text="Role" FontAttributes="Bold" FontSize="20"/>
            <Label Text="{Binding SelectedUser.Role}" FontSize="18" />
        </VerticalStackLayout>

        <!-- Email -->
        <VerticalStackLayout Spacing="2">
            <Label Text="Email" FontAttributes="Bold" FontSize="20"/>
            <Label Text="{Binding SelectedUser.Email}" FontSize="18" />
        </VerticalStackLayout>

        <!-- Divider -->
        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,10"/>

        <!-- Buttons -->
        <Button Text="Edit User" Command="{Binding EditUserCommand}" />
        <Button Text="Delete User" Command="{Binding DeleteUserCommand}" />
    </VerticalStackLayout>
</ContentPage>
