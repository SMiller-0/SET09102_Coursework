<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SET09102_Coursework.ViewModels"
             x:Class="SET09102_Coursework.Views.UserPage"
             Title="User Details">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="{Binding SelectedUser.FirstName}" FontAttributes="Bold" FontSize="20" />
        <Label Text="{Binding SelectedUser.Surname}" FontSize="18" />
        <Label Text="{Binding SelectedUser.Email}" FontSize="16" />
        <Label Text="{Binding SelectedUser.Role}" FontSize="16" />

        <Button Text="Edit User" Command="{Binding EditUserCommand}" />
        <Button Text="Delete User" Command="{Binding DeleteUserCommand}" />
    </VerticalStackLayout>
</ContentPage>
