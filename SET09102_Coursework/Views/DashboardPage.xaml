<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SET09102_Coursework.Views.DashboardPage">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
            <Label Text="Welcome to Smart Sense!"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Button Text="View Users"
                    Command="{Binding ViewAllUsersCommand}"
                    HeightRequest="50"
                    FontSize="18" />

            <Button Text="View Sensors"
                    Command="{Binding ViewAllSensorsCommand}"
                    HeightRequest="50"
                    FontSize="18" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>