<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SET09102_Coursework.ViewModels"
             x:Class="SET09102_Coursework.Views.SensorSettingsPage"
             Title="Sensor Settings">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="{Binding Sensor.Name}"
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <BoxView HeightRequest="1" BackgroundColor="Gray" />

            <CollectionView ItemsSource="{Binding SensorSettings}"
                          EmptyView="No settings found for this sensor.">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" 
                               Padding="15" 
                               Margin="0,5">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  RowSpacing="10">
                                
                                <Label Text="Setting Name:" 
                                       Grid.Row="0" 
                                       Grid.Column="0"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding SettingType.Name}" 
                                       Grid.Row="0" 
                                       Grid.Column="1"/>

                                <Label Text="Current Value:" 
                                       Grid.Row="1" 
                                       Grid.Column="0"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding CurrentValue}" 
                                       Grid.Row="1" 
                                       Grid.Column="1"/>

                                <Label Text="Minimum Value:" 
                                       Grid.Row="2" 
                                       Grid.Column="0"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding MinimumValue}" 
                                       Grid.Row="2" 
                                       Grid.Column="1"/>

                                <Label Text="Maximum Value:" 
                                       Grid.Row="3" 
                                       Grid.Column="0"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding MaximumValue}" 
                                       Grid.Row="3" 
                                       Grid.Column="1"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
