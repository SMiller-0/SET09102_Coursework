<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SET09102_Coursework.Views.AllUsersPage"
             xmlns:viewModels="clr-namespace:SET09102_Coursework.ViewModels"
             Title="All System Users">

<ContentPage.BindingContext>
        <viewModels:AllUsersViewModel />
</ContentPage.BindingContext>

<VerticalStackLayout>
        <Label Text="All System Users" FontAttributes="Bold" FontSize="20"/>
        <!-- Display List in a grid -->

        <Button Text="Add New User" Command="{Binding AddUserCommand}" />
        <Button Text="Edit User" Command="{Binding EditUserCommand}" />
        <Button Text="Delete User" Command="{Binding DeleteUserCommand}" />

    </VerticalStackLayout>
</ContentPage>