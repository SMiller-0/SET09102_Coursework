<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SET09102_Coursework.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SET09102_Coursework.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Icon="home.png"
            Route="DashboardPage" />

        <ShellContent
            Title="Users"
            ContentTemplate="{DataTemplate views:AllUsersPage}"
            Icon="user.png"
            Route="AllUsersPage" />

        <ShellContent
            Title="Sensors"
            ContentTemplate="{DataTemplate views:SensorDashboardPage}"
            Icon="sensor.png"
            Route="SensorDashboardPage" />

         <ShellContent
            Title="Tickets"
            ContentTemplate="{DataTemplate views:AllTicketsPage}"
            Icon="sensor.png"
            Route="AllTicketsPage" />

        <ShellContent
            Title="Logout"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Icon="logout.png"
            Route="LoginPage" />       
    </TabBar>

</Shell>

