<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SET09102_Coursework.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SET09102_Coursework.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Icon="home.png"
            Route="DashboardPage" />

        <ShellContent
            Title="Users"
            ContentTemplate="{DataTemplate views:AllUsersPage}"
            Icon="user.png"
            Route="AllUsersPage" />

        <ShellContent
            Title="Sensors"
            ContentTemplate="{DataTemplate views:SensorDashboardPage}"
            Icon="sensor.png"
            Route="SensorDashboardPage" />

        <ShellContent
            Title="Logout"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Icon="logout.png"
            Route="LoginPage" />

        <ShellContent
            Title="Backup Database"
            ContentTemplate="{DataTemplate views:AdminBackUp}"
            Icon="backup.png"
            IsVisible="{Binding IsUserAdmin}"/>

        <ShellContent
            Title="Analyse Enviromental Data"
            ContentTemplate="{DataTemplate views:AnalyticalTestsEnviromental}"
            Icon="analysis.png"
            IsVisible="{Binding IsUserEnviScientist}"/>

        <ShellContent
            Title="Check Anomalies"
            ContentTemplate="{DataTemplate views:OpsAnomalyManager}"
            Icon="analysis.png"
            IsVisible="{Binding IsUserOps}"/>

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>

</Shell>

